<apex:page standardController="Account" extensions="AccountNameUpdateController" >
    <apex:form >
        <apex:pageBlock mode="edit" title="Content">
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Content Section">
                <apex:outputLabel value="Account Name: "></apex:outputLabel> 
                <apex:inputText value="{!accountName}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>